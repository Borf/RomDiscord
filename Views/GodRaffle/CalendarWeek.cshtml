@{
    @model RomDiscord.Models.Pages.GodRaffle.CalendarWeek;
}

<div class="d-flex justify-content-between">
    <div><a href="/GodRaffle/CalendarWeek/@Model.Year/@(Model.Week-1)" class="btn btn-primary">Previous</a></div>
    <div><h2></h2>Godequip rolls for week @Model.Week of @Model.Year</h2></div>
    <div><a href="/GodRaffle/CalendarWeek/@Model.Year/@(Model.Week+1)" class="btn btn-primary">Next</a></div>
</div>
<div class="container">
    @foreach(var day in Model.Days.Where(d => d.rolls.Count > 0))
    {
        <div class="card m-3" style="float: left; width: 500px;">
            <div class="card-header bg-dark text-white">@day.Date.DayOfWeek @day.Date.ToString("dd-MM-yyyy")</div>
            <ul class="list-group list-group-flush">
            @foreach(var roll in day.rolls)
            {
                <li class="list-group-item p-0 text-white bg-dark px-3">
                    <div class="row">
                    <div class="col-sm">
                        <img title="@roll.GodEquip.GodEquip.Name" src="/img/GodEquip/@(Util.NameToId(roll.GodEquip.GodEquip.Name)).png" style="height: 20px; width: auto; margin-right: 10px;"/>
                        @roll.GodEquip.GodEquip.Name
                    </div>
                    <div class="col-sm">
                        <span>@roll.Name</span>
                    </div>
                    </div>
                </li>
            }
            </ul>
        </div>
    }
</div>